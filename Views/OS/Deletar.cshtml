@model OSModel

@{
    ViewData["Title"] = "Deletar";
}

<h2 class="mt-2">Deletar</h2>
<h4 class="mt-1">Tem certeza que deseja excluir?</h4>

<div>
    <h5>Ordem de Serviço</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Numero da OS:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroOS)
        </dd>
        <dt class="col-sm-2">
            Serviço:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TituloServico)
        </dd>
        <dt class="col-sm-2">
            Nome Do Cliente:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeDoCliente)
        </dd>
        <dt class="col-sm-2">
            Nome Do Prestador:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeDoPrestador)
        </dd>
    </dl>

    <form class="d-flex gap-2 flex-row"asp-action="Deletar">
        <input type="hidden" asp-for="NumeroOS" />
        <button type="submit" class="btn gap-1 d-flex justify-content-center align-items-center" style="background-color: #FF1493; color: white;">
            <span>
                Deletar
            </span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
            </svg>
        </button>
        <a asp-action="Index" class="btn" style="background-color: #A9A9A9; color: white;">
            <span>
                Cancelar
            </span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
            </svg>
        </a>
    </form>
</div>